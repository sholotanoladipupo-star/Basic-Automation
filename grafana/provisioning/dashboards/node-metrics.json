{
  "uid": "node-metrics",
  "title": "Node Exporter - Machine Metrics",
  "tags": ["node", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage %",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "options": { "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage %",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Used",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "CPU Usage (by mode)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": { "lineWidth": 1, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "expr": "avg by (mode) (rate(node_cpu_seconds_total{mode!=\"idle\"}[5m]))",
          "legendFormat": "{{mode}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Memory Breakdown",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "lineWidth": 2, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "Available",
          "refId": "B"
        },
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used",
          "refId": "C"
        }
      ]
    },
    {
      "id": 5,
      "title": "Disk I/O (bytes/sec)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "lineWidth": 2, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "Read - {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "Write - {{device}}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "Network I/O (bytes/sec)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "lineWidth": 2, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "Receive - {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "Transmit - {{device}}",
          "refId": "B"
        }
      ]
    },
    {
      "id": 7,
      "title": "Disk Space Used %",
      "type": "bargauge",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": { "orientation": "horizontal", "displayMode": "gradient" },
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|overlay\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"} * 100",
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "System Load Average",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": { "lineWidth": 2, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m",
          "refId": "C"
        }
      ]
    }
  ]
}
